<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.i.AndroidDemos.view.widget.AutoTypefaceTextView
        android:id="@+id/singleton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@color/colorwhite"
        android:gravity="center"
        app:text_auto="单例模式singleton" />

    <com.example.i.AndroidDemos.view.widget.FontTextView
        android:id="@+id/builder"
        style="@style/commontextview"
        android:text="Builder模式" />

    <com.example.i.AndroidDemos.view.widget.FontTextView
        android:id="@+id/observer"
        style="@style/commontextview"
        android:text="观察者模式" />

</LinearLayout>