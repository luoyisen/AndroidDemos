<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:showIn="@layout/activity_main">

    <RadioButton
        android:id="@+id/main_trending"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:button="@null"
        android:drawableTop="@drawable/vector_drawable_trending"
        android:gravity="center"
        android:textSize="0sp" />

    <RadioButton
        android:id="@+id/main_searchresult"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:button="@null"
        android:drawableTop="@drawable/ic_search_black_24dp"
        android:gravity="center"
        android:textSize="0sp" />

    <RadioButton
        android:id="@+id/main_userinfo"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:button="@null"
        android:drawableTop="@drawable/vector_drawable_user_info"
        android:gravity="center"
        android:textSize="0sp" />

    <RadioButton
        android:id="@+id/main_settings"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:button="@null"
        android:drawableTop="@drawable/vector_drawable_setting"
        android:gravity="center"
        android:textSize="0sp" />

</RadioGroup>